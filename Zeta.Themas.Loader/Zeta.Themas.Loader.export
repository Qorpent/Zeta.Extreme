<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Choose>
    <When Condition="'$(NoProjRef)'=='True' and '$(Configuration)' != 'Release'  and Exists('$(AllBinPath)\Zeta.Themas.Loader.dll')">
      <ItemGroup>
        <Reference Include="Zeta.Themas.Loader">
          <SpecificVersion>False</SpecificVersion>
          <HintPath>$(AllBinPath)\Zeta.Themas.Loader.dll</HintPath>
        </Reference>
      </ItemGroup>
    </When>
    <When Condition="'$(NoProjRef)'=='True' and '$(Configuration)' == 'Release' ">
      <ItemGroup>
        <Reference Include="Zeta.Themas.Loader">
          <SpecificVersion>False</SpecificVersion>
          <HintPath>$(AllReleasePath)\Zeta.Themas.Loader.dll</HintPath>
        </Reference>
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <ProjectReference Include="..\..\Zeta.Extreme\Zeta.Themas.Loader\Zeta.Themas.Loader.csproj">
          <Name>Zeta.Themas.Loader</Name>
        </ProjectReference>
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>